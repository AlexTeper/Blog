@model List<ImageDetails>


@if (Model.Count != 0)
{
    <h1>Images</h1>
    @for (var i = 0; i < Model.Count; i++)
    {
        <img class="img-fluid my-3 hover-shadow" alt="@Model[i].Name" src="@Model[i].Path" />
    }
}
else
{
    <h3>No image found</h3>
}
<br />
<a class="btn btn-danger" asp-controller="Home" asp-action="Index" role="button">Back</a>
